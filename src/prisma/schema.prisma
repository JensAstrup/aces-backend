generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  linearId         String?   @unique
  email            String?   @unique
  displayName      String?
  token            String    @unique // Generated by the frontend for anonymous users, otherwise is Linear access token
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
